# Backend API authentication
OMNI_AGENT_API_KEY=change_me

# Set to 1 to run without an API key (LOCAL DEV ONLY - DO NOT USE IN PROD)
OMNI_AGENT_ALLOW_INSECURE_NOAUTH=0

# GitHub (for IssueAgent/ReleaseAgent)
GITHUB_TOKEN=your_personal_access_token

# Docker Hub (for deployments)
DOCKER_USERNAME=your_username
DOCKER_PASSWORD=your_password

# Weaviate
WEAVIATE_URL=http://localhost:8080

# Optional (used by docker-compose.prod.yml)
WEAVIATE_API_KEY=
WEAVIATE_API_USER=omni-agent

# Dangerous capabilities (LOCAL DEV ONLY - can enable arbitrary code exec and Docker builds)
OMNI_AGENT_ENABLE_CODE_EXEC=0
OMNI_AGENT_ENABLE_DOCKER_BUILD=0
